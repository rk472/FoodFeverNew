<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studio.smarters.foodfever">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeForMain">
        <activity android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".SignupActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ForgotPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".OnboardingWithCenterAnimationActivity"
            android:theme="@style/AppThemeForMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CartActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".OrderHistoryActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".SubMenuActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>